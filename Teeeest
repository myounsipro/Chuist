import org.junit.jupiter.api.Test;

import java.util.Map;

import static org.junit.jupiter.api.Assertions.*;

class TooManyElementsExceptionTest {

    @Test
    void shouldBuildExceptionWithCorrectMessageAndParameters() {
        // Given
        String field = "items";
        int maxSize = 3;
        int currentSize = 5;

        TooManyElementsException ex = TooManyElementsException.builder()
                .field(field)
                .maxSize(maxSize)
                .size(currentSize)
                .build();

        // Then
        assertEquals("Size of collection \"items\" must be at most 3 but was 5", ex.getMessage());

        Map<String, String> params = ex.parameters();
        assertEquals("3", params.get("maxSize"));
        assertEquals("5", params.get("currentSize"));

        assertEquals(AssertionErrorType.TOO_MANY_ELEMENTS, ex.type());
    }

    @Test
    void builderShouldGenerateCorrectMessage() {
        var builder = TooManyElementsException.builder()
                .field("participants")
                .maxSize(10)
                .size(14);

        String expected = "Size of collection \"participants\" must be at most 10 but was 14";
        assertEquals(expected, builder.message());
    }
}