import { Injectable } from '@angular/core';
import { environment } from '../environments/environment';

@Injectable({
    providedIn: 'root'
})
export class AppInfoService {
    getVersion() {
        return environment.version; // Ajoutez 'version' dans vos environnements
    }

    getEnvironment() {
        return environment.environmentName; // Ajoutez 'environmentName' dans vos environnements
    }
}





export class YourComponent {
    appVersion = this.appInfoService.getVersion();
    environmentName = this.appInfoService.getEnvironment();

    constructor(private appInfoService: AppInfoService) {}
}




export const environment = {
    production: false,
    environmentName: 'Development',
    version: '1.0.0'
    // ... autres configurations
};




