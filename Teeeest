import static org.junit.jupiter.api.Assertions.*;
import org.junit.jupiter.api.Test;

public class InvoiceLineTest {

    @Test
    void testBasicFields() {
        InvoiceLine invoiceLine = new InvoiceLine();
        invoiceLine.setId(1L);
        invoiceLine.setInvoiceId(100L);
        invoiceLine.setFinancialCompany("CompanyX");
        invoiceLine.setGroupContractNumber("GCN-123");
        invoiceLine.setConventionOrPolicy("Policy-01");
        invoiceLine.setSubConventionType("TypeA");
        invoiceLine.setAmendment("Amend-01");
        invoiceLine.setMandate("MandateX");

        assertEquals(1L, invoiceLine.getId());
        assertEquals(100L, invoiceLine.getInvoiceId());
        assertEquals("CompanyX", invoiceLine.getFinancialCompany());
        assertEquals("GCN-123", invoiceLine.getGroupContractNumber());
        assertEquals("Policy-01", invoiceLine.getConventionOrPolicy());
        assertEquals("TypeA", invoiceLine.getSubConventionType());
        assertEquals("Amend-01", invoiceLine.getAmendment());
        assertEquals("MandateX", invoiceLine.getMandate());
    }

    @Test
    void testProductFields() {
        InvoiceLine invoiceLine = new InvoiceLine();
        invoiceLine.setInsuranceOptionOrRisk("OptionA");
        invoiceLine.setProductLabel("Product A");
        invoiceLine.setProductCode("P123");

        assertEquals("OptionA", invoiceLine.getInsuranceOptionOrRisk());
        assertEquals("Product A", invoiceLine.getProductLabel());
        assertEquals("P123", invoiceLine.getProductCode());
    }

    @Test
    void testPremiumFields() {
        InvoiceLine invoiceLine = new InvoiceLine();
        invoiceLine.setTotalPremiumIncludingTax(1000.0);
        invoiceLine.setTotalPremiumExcludingTax(800.0);
        invoiceLine.setTotalVat(200.0);
        invoiceLine.setNumberOfFiles(2);

        assertEquals(1000.0, invoiceLine.getTotalPremiumIncludingTax());
        assertEquals(800.0, invoiceLine.getTotalPremiumExcludingTax());
        assertEquals(200.0, invoiceLine.getTotalVat());
        assertEquals(2, invoiceLine.getNumberOfFiles());
    }

    @Test
    void testCommissionFields() {
        InvoiceLine invoiceLine = new InvoiceLine();
        invoiceLine.setUnitCommissionPerFile(10.0);
        invoiceLine.setManagementCommissionRate(5.0);
        invoiceLine.setManagementCommission(50.0);
        invoiceLine.setBrokerageCommissionRate(7.5);
        invoiceLine.setBrokerageCommission(75.0);
        invoiceLine.setTotalCommissions(125.0);

        assertEquals(10.0, invoiceLine.getUnitCommissionPerFile());
        assertEquals(5.0, invoiceLine.getManagementCommissionRate());
        assertEquals(50.0, invoiceLine.getManagementCommission());
        assertEquals(7.5, invoiceLine.getBrokerageCommissionRate());
        assertEquals(75.0, invoiceLine.getBrokerageCommission());
        assertEquals(125.0, invoiceLine.getTotalCommissions());
    }

    @Test
    void testClaimsAndDuesFields() {
        InvoiceLine invoiceLine = new InvoiceLine();
        invoiceLine.setSettledClaimsDeath(0.0);
        invoiceLine.setSettledClaimsDisability(0.0);
        invoiceLine.setSettledClaimsUnemployment(20.0);
        invoiceLine.setSettledClaimsOthers(5.0);
        invoiceLine.setTotalClaims(25.0);
        invoiceLine.setBrokerDue(50.0);
        invoiceLine.setCompanyDue(75.0);

        assertEquals(0.0, invoiceLine.getSettledClaimsDeath());
        assertEquals(0.0, invoiceLine.getSettledClaimsDisability());
        assertEquals(20.0, invoiceLine.getSettledClaimsUnemployment());
        assertEquals(5.0, invoiceLine.getSettledClaimsOthers());
        assertEquals(25.0, invoiceLine.getTotalClaims());
        assertEquals(50.0, invoiceLine.getBrokerDue());
        assertEquals(75.0, invoiceLine.getCompanyDue());
    }
}