
import org.junit.jupiter.api.Test;

import static org.junit.jupiter.api.Assertions.*;

class AssertionErrorTypeTest {

    @Test
    void shouldContainExpectedEnumValues() {
        assertNotNull(AssertionErrorType.MISSING_MANDATORY_VALUE);
        assertNotNull(AssertionErrorType.NOT_AFTER_TIME);
        assertNotNull(AssertionErrorType.NOT_BEFORE_TIME);
        assertNotNull(AssertionErrorType.NULL_ELEMENT_IN_COLLECTION);
        assertNotNull(AssertionErrorType.NUMBER_VALUE_TOO_HIGH);
        assertNotNull(AssertionErrorType.NUMBER_VALUE_TOO_LOW);
        assertNotNull(AssertionErrorType.STRING_TOO_LONG);
        assertNotNull(AssertionErrorType.STRING_TOO_SHORT);
        assertNotNull(AssertionErrorType.TOO_MANY_ELEMENTS);
    }

    @Test
    void shouldReturnCorrectEnumByName() {
        assertEquals(AssertionErrorType.NOT_AFTER_TIME, AssertionErrorType.valueOf("NOT_AFTER_TIME"));
        assertEquals(AssertionErrorType.STRING_TOO_SHORT, AssertionErrorType.valueOf("STRING_TOO_SHORT"));
    }

    @Test
    void shouldListAllEnumValues() {
        AssertionErrorType[] values = AssertionErrorType.values();
        assertEquals(8, values.length);
        assertTrue(List.of(values).contains(AssertionErrorType.TOO_MANY_ELEMENTS));
    }
}